<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<DialogPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.gawryszewski.edp_projekt.controller.ItemDialogController">
    <content>
        <VBox alignment="center" prefHeight="500.0" prefWidth="500.0">
            <Label text="Enter product data:">
                <font>
                    <Font name="Times New Roman bold" size="20" />
                </font>
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
            </Label>

            <TextField fx:id="itemName" promptText="Enter item name">
            <font>
               <Font name="Times New Roman" size="20.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></TextField>
            <TextField fx:id="itemPrice" promptText="Enter item price">
            <font>
               <Font name="Times New Roman" size="20.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></TextField>
            <TextField fx:id="itemDescription" promptText="Enter item description">
            <font>
               <Font name="Times New Roman" size="20.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></TextField>
            <HBox>
                <TextField fx:id="itemImagePath" promptText="Optional: enter image path">
                <font>
                   <Font name="Times New Roman" size="20.0" />
                </font>
                <VBox.margin>
                   <Insets top="10.0" />
                </VBox.margin>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></TextField>
                <Button text="Browse" onAction="#browseImage">
                    <font>
                       <Font name="Times New Roman" size="20.0" />
                    </font>
                </Button>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin>
            </HBox>
        </VBox>
    </content>

</DialogPane>
